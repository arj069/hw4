<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<% if @current_user %>
<% for post in @posts %>
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
<% else %>
There are no posts to display!
<% end %>

<p>
  <% if @current_user %>
    <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  <% else %>
  <% end %>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>